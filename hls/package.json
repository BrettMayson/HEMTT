{
  "name": "hemtt",
  "description": "HEMTT Language Server & Utils",
  "license": "MIT",
  "version": "0.2.9",
  "publisher": "brettmayson",
  "icon": "icon.png",
  "categories": [],
  "keywords": [
    "language-server",
    "arma",
    "sqf"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brettmayson/hemtt"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "sqf",
        "scopeName": "sqf",
        "path": "./languages/sqf.json"
      },
      {
        "language": "arma-config",
        "scopeName": "config",
        "path": "./languages/config.json"
      }
    ],
    "languages": [
      {
        "id": "sqf",
        "aliases": [
          "SQF",
          "sqf",
          "Arma SQF"
        ],
        "extensions": [
          ".sqf"
        ],
        "configuration": "./languages/sqf.configuration.json"
      },
      {
        "id": "arma-config",
        "aliases": [
          "Arma Config"
        ],
        "extensions": [
          ".ext",
          ".hpp",
          ".sqm"
        ],
        "filenames": [
          "config.cpp"
        ],
        "configuration": "./languages/config.configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "hemtt-language-server",
      "properties": {
        "hemtt-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "hemtt.paa",
        "displayName": "PAA",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.paa"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "hemtt.zoomIn",
        "title": "%command.zoomIn%",
        "category": "Image Preview"
      },
      {
        "command": "hemtt.zoomOut",
        "title": "%command.zoomOut%",
        "category": "Image Preview"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "hemtt.zoomIn",
          "when": "activeCustomEditorId == 'hemtt.previewEditor'",
          "group": "1_imagePreview"
        },
        {
          "command": "hemtt.zoomOut",
          "when": "activeCustomEditorId == 'hemtt.previewEditor'",
          "group": "1_imagePreview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./vscode-src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "compile-lsp": "run-script-os",
    "compile-lsp:darwin:linux": "cargo build --release --bin hemtt-language-server && cp ../target/release/hemtt-language-server ./hemtt-language-server",
    "compile-lsp:win32": "cargo build --release --bin hemtt-language-server && copy ..\\target\\release\\hemtt-language-server.exe .\\hemtt-language-server.exe",
    "test-compile": "tsc -p ./",
    "lint": "eslint vscode-src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.88.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "run-script-os": "^1.1.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "vscode-uri": "^3.0.8"
  },
  "dependencies": {
    "portfinder": "^1.0.32",
    "vscode-languageclient": "^9.0.1"
  }
}
