{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "label": "build hls (lsp)",
      "script": "compile-lsp",
      "options": {
        "cwd": "${workspaceRoot}/hls"
      }
    },
    {
      "type": "npm",
      "label": "build hls (vscode)",
      "script": "compile",
      "dependsOn": ["build hls (lsp)"],
      "options": {
        "cwd": "${workspaceRoot}/hls"
      }
    },
    {
      "type": "npm",
      "label": "build hls (p3d viewer)",
      "script": "esbuild-p3d",
      "options": {
        "cwd": "${workspaceRoot}/hls"
      }
    },
    {
      "type": "npm",
      "label": "build hls (paa viewer)",
      "script": "esbuild-paa",
      "options": {
        "cwd": "${workspaceRoot}/hls"
      }
    },
    {
      "label": "build hls",
      "dependsOn": ["build hls (vscode)", "build hls (p3d viewer)", "build hls (paa viewer)"]
    },
    {
        "label": "cargo release hemtt",
        "type": "shell",
        "command": "cargo build --release -p hemtt",
        "problemMatcher": [
            "$rustc"
        ]
    },
    {
        "label": "cargo nextest (windoze)",
        "type": "shell",
        "command": "cargo nextest run --config profile.test.opt-level=3 --config profile.test.codegen-units=1",
        "problemMatcher": [
            "$rustc"
        ]
    },
  ]
}
